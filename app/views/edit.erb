<form action="/articles/<%= @article.id %>" method="post">
    <input id="hidden" type="hidden" name="_method" value="patch">
    <label>Article Title: <input id="title" type="text" name="title" value=<%=@article.title %>></label><br/>
    <label>Article Content: <input id="content" type="text" name="content" value=<%=@article.content %>></label><br/>
    <input type="submit" id="Submit" />
</form>